int sensorPin[4] = {1,2,3,4};
int triggerPin = 5;
int echoPin = 6;
int cm;

long readUltrasonic(int triggerPin, int echoPin){
  pinMode(triggerPin,OUTPUT);
  digitalWrite(triggerPin,LOW);
  delayMicroseconds(2);

  digitalWrite(triggerPin,HIGH);
  delayMicroseconds(10);

  digitalWrite(triggerPin,LOW);
  
  pinMode(echoPin,INPUT);   
  return pulseIn(echoPin,HIGH); 
}
int usec2cm(long microseconds){
  return (int)microseconds / 29.4 / 2;  

}

void setup() {
  // put your setup code here, to run once:

}

void loop() {

  cm = usec2cm(readUltrasonic(triggerPin, echoPin));
  Serial.print(cm);
  Serial.print("cm");
  delay(100);
  
  for(int i=0; i<4; i++){
    Serial.print("\t");
    Serial.print(analogRead(sensorPin[i]));
    delay(10);
    }
  Serial.println();

}
